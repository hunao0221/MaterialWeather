    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:divider">#B6B6B6</item>
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:textColorSecondary">#727272</item>

    </style>


    <style name="SrrollActivityTheme" parent="MyMaterialTheme">
        <item name="colorPrimaryDark">#e60213</item>
    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>


    <style name="week">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="start_tmp" parent="week">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="end_tmp" parent="week">
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="life_title" parent="week">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">15sp</item>
    </style>


    <style name="life_detail" parent="week">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="MyMaterialTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyMaterialTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
