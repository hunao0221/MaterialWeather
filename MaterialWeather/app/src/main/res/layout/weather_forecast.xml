<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_week_1"
                style="@style/week"
                android:text="星期五" />

            <ImageView
                android:id="@+id/iv_week_1"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/week1_start_tmp"
                style="@style/start_tmp"
                android:text="15°" />

            <TextView
                android:id="@+id/week1_end_tmp"
                style="@style/end_tmp"
                android:text="25°" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"

            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_week_2"
                style="@style/week"
                android:text="星期五" />

            <ImageView
                android:id="@+id/iv_week_2"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/week2_start_tmp"
                style="@style/start_tmp"
                android:text="15°" />

            <TextView
                android:id="@+id/week2_end_tmp"
                style="@style/end_tmp"
                android:text="25°" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"

            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_week_3"
                style="@style/week"
                android:text="星期五" />

            <ImageView
                android:id="@+id/iv_week_3"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/week3_start_tmp"
                style="@style/start_tmp"
                android:text="15°" />

            <TextView
                android:id="@+id/week3_end_tmp"
                style="@style/end_tmp"
                android:text="25°" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"

            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_week_4"
                style="@style/week"
                android:text="星期五" />

            <ImageView
                android:id="@+id/iv_week_4"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/wwek4_start_tmp"
                style="@style/start_tmp"
                android:text="15°" />

            <TextView
                android:id="@+id/week4_end_tmp"
                style="@style/end_tmp"
                android:text="25°" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"

            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_week_5"
                style="@style/week"
                android:text="星期五" />

            <ImageView
                android:id="@+id/iv_week_5"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/week5_start_tmp"
                style="@style/start_tmp"
                android:text="15°" />

            <TextView
                android:id="@+id/week5_end_tmp"
                style="@style/end_tmp"
                android:text="25°" />
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>